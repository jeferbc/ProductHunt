<h1 class="text-center">Productos</h1>
<div class="container">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <% if signed_in? %>
        <div class="text-right">
          <%= link_to "New Product", new_product_path, class: "btn btn-primary" %>
        </div>
      <% end %>
      <table class="table">
        <thead>
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>URL</th>
            <th>Description</th>
            <% if signed_in? %>
              <th>Actions</th>
            <% end %>
          </tr>
        </thead>
        <tbody>
          <% @products.each do |product| %>
            <tr>
              <td><%= product.id %></td>
              <td><%= product.name %></td>
              <td><%= product.url %></td>
              <td><%= product.description %></td>
              <% if signed_in? %>
                <td>
                  <%= link_to "Show", product_path(product) %> -
                  <%= link_to "Edit", edit_product_path(product) %> -
                  <%= link_to "Delete", product, method: :delete, data: {confirm: "Â¿Are you sure?"} %>
                </td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
