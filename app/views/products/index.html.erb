<h1 class="text-center">Productos</h1>
<div class="container">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <div class="text-right">
        <%= link_to "New Product", new_product_path, class: "btn btn-primary" %>
      </div>
      <table class="table">
        <thead>
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>URL</th>
            <th>Description</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @products.each do |product| %>
            <tr>
              <td><%= product.id %></td>
              <td><%= product.name %></td>
              <td><%= product.url %></td>
              <td><%= product.description %></td>
              <td>
                <%= link_to "Show", product_path(product) %> -
                <%= link_to "Edit", edit_product_path(product) %> -
                <%= link_to "Delete", product, method: :delete, data: {confirm: "Â¿Are you sure?"} %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
