<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <h1>Create Product</h1>
      <%= form_for @product do |f| %>
        <div class="form-group">
          <%= f.text_field :name, class: "form-control", placeholder: 'Enter Product Name' %>
        </div>
        <div class="form-group">
          <%= f.url_field :url, class: "form-control", placeholder: 'Enter Product URL' %>
        </div>
        <div class="form-group">
          <%= f.text_area :description, class: "form-control", placeholder: 'Enter Product Description'  %>
        </div>
        <div class="form-group">
          <%= f.submit 'Product', class: "btn btn-primary btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
